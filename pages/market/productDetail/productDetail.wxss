.body {
  background-color: white;
  height: 100%;
}

.navi {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
}

.slide-image {
  width: 100%;
  border-radius: 5px;
}

.swiper {
  width:100%;
  height:40%;
  background: linear-gradient(
      rgba(0, 0, 0, 0.1),
      rgba(0, 0, 0, 0.5)
    );
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.noImgBackGround {
  width: 100%;
  height: 40%;
  background-color: white;
}

.titleB {
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
